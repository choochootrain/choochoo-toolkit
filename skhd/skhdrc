# gimme iterm
alt - return : "${HOME}"/.config/mac-scripts/open_iterm2.sh

# focus window
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# move window
alt + shift - h : yabai -m window --warp west
alt + shift - j : yabai -m window --warp south
alt + shift - k : yabai -m window --warp north
alt + shift - l : yabai -m window --warp east

# swap window
alt + ctrl - h : yabai -m window --swap west
alt + ctrl - j : yabai -m window --swap south
alt + ctrl - k : yabai -m window --swap north
alt + ctrl - l : yabai -m window --swap east

# zoom fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen

# zoom parent
alt + shift - f : yabai -m window --toggle zoom-parent

# balance
alt - w : yabai -m space --balance

# set insertion point in focused container
alt - c : yabai -m window --insert south
alt - v : yabai -m window --insert east

# toggle split
alt - e : yabai -m window --toggle split

# mirror axis
alt + shift - c : yabai -m space --mirror x-axis
alt + shift - v : yabai -m space --mirror y-axis

# toggle float
alt - d : yabai -m window --toggle float

# toggle scratchpad
alt - t : yabai -m window --toggle float; yabai -m window --grid 9:9:2:1:5:7

# XXX(enable SIP) switch space
#alt - 1 : yabai -m space --focus 1
#alt - 2 : yabai -m space --focus 2
#alt - 3 : yabai -m space --focus 3
#alt - 4 : yabai -m space --focus 4
#alt - 5 : yabai -m space --focus 5
#alt - 6 : yabai -m space --focus 6
#alt - 7 : yabai -m space --focus 7
#alt - 8 : yabai -m space --focus 8
#alt - 9 : yabai -m space --focus 9
#alt - 0 : yabai -m space --focus 10

# move window to space
alt + shift - 1 : yabai -m window --space 1
alt + shift - 2 : yabai -m window --space 2
alt + shift - 3 : yabai -m window --space 3
alt + shift - 4 : yabai -m window --space 4
alt + shift - 5 : yabai -m window --space 5
alt + shift - 6 : yabai -m window --space 6
alt + shift - 7 : yabai -m window --space 7
alt + shift - 8 : yabai -m window --space 8
alt + shift - 9 : yabai -m window --space 9
alt + shift - 0 : yabai -m window --space 10

# reload .yabairc
alt + shift - r : launchctl kickstart -k "gui${UID}/homebrew.mxcl.yabai"
